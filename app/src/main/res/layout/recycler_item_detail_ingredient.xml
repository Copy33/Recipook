<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

    <EditText
        android:id="@+id/recycler_item_detail_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/recycler_item_detail_ingredient_add_to_shopping_list_button"
        android:layout_toRightOf="@+id/recycler_item_detail_ingredient_add_to_shopping_list_button"
        android:backgroundTint="@color/colorPrimary"
        android:inputType="text"
        android:paddingBottom="@dimen/detail_list_content_text_horizontal_padding"
        android:paddingEnd="@dimen/detail_list_content_text_vertical_padding"
        android:paddingLeft="@dimen/detail_list_content_text_vertical_padding"
        android:paddingRight="@dimen/detail_list_content_text_vertical_padding"
        android:paddingStart="@dimen/detail_list_content_text_vertical_padding"
        android:paddingTop="@dimen/detail_list_content_text_horizontal_padding"
        android:text="@string/detail_recycler_item_ingredient_quantity_default"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/detail_list_content_text_size"/>

    <EditText
        android:id="@+id/recycler_item_detail_ingredient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/recycler_item_detail_ingredient_quantity"
        android:layout_toRightOf="@+id/recycler_item_detail_ingredient_quantity"
        android:inputType="textMultiLine"
        android:paddingBottom="@dimen/detail_list_content_text_horizontal_padding"
        android:layout_marginEnd="@dimen/detail_list_content_text_vertical_padding"
        android:layout_marginRight="@dimen/detail_list_content_text_vertical_padding"
        android:paddingTop="@dimen/detail_list_content_text_horizontal_padding"
        android:text="@string/detail_recycler_item_ingredient_name_default"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/detail_list_content_text_size"/>

    <ImageButton
        android:id="@+id/recycler_item_detail_ingredient_add_to_shopping_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/detail_list_content_text_horizontal_padding"
        android:paddingEnd="@dimen/detail_list_action_button_vertical_padding"
        android:paddingLeft="@dimen/detail_list_action_button_vertical_padding"
        android:paddingRight="@dimen/detail_list_action_button_vertical_padding"
        android:paddingStart="@dimen/detail_list_action_button_vertical_padding"
        android:paddingTop="@dimen/detail_list_action_button_horizontal_padding"
        android:src="@drawable/ic_add_circle_filled_green_24dp"/>

    <ImageButton
        android:id="@+id/recycler_item_detail_ingredient_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/detail_list_content_text_horizontal_padding"
        android:paddingEnd="@dimen/detail_list_action_button_vertical_padding"
        android:paddingLeft="@dimen/detail_list_action_button_vertical_padding"
        android:paddingRight="@dimen/detail_list_action_button_vertical_padding"
        android:paddingStart="@dimen/detail_list_action_button_vertical_padding"
        android:paddingTop="@dimen/detail_list_action_button_horizontal_padding"
        android:src="@drawable/ic_delete_red_24dp"/>

</RelativeLayout>

