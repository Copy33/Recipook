<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joemerhej.recipook.ShoppingListTabFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/shopping_header_image_view"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/shopping_list_add_ingredient_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shopping_list_add_ingredient_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/shopping_list_add_ingredient_edit_text"
                android:background="@color/windowBackground"
                android:paddingBottom="@dimen/padding_8dp"
                android:paddingEnd="@dimen/padding_8dp"
                android:paddingLeft="@dimen/padding_8dp"
                android:paddingRight="@dimen/padding_8dp"
                android:paddingStart="@dimen/padding_8dp"
                android:paddingTop="@dimen/padding_8dp"
                android:src="@drawable/ic_add_green_24dp"/>

            <EditText
                android:id="@+id/shopping_list_add_ingredient_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/shopping_list_add_ingredient_button"
                android:layout_toRightOf="@id/shopping_list_add_ingredient_button"
                android:hint="@string/detail_edit_add_ingredient_textinput_hint"
                android:inputType="text|textNoSuggestions"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shopping_list_ingredients_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
