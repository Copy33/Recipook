<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/recycler_item_shopping_ingredient_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

    <TextView
        android:id="@+id/recycler_item_shopping_ingredient_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/recycler_item_shopping_ingredient_picture"
        android:layout_toRightOf="@+id/recycler_item_shopping_ingredient_picture"
        android:paddingBottom="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_8dp"
        android:text="@string/detail_recycler_item_ingredient_quantity_default"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_16sp"/>

    <TextView
        android:id="@+id/recycler_item_shopping_ingredient_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/padding_8dp"
        android:layout_marginRight="@dimen/padding_8dp"
        android:layout_toEndOf="@+id/recycler_item_shopping_ingredient_quantity"
        android:layout_toRightOf="@+id/recycler_item_shopping_ingredient_quantity"
        android:paddingBottom="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_8dp"
        android:text="@string/detail_recycler_item_ingredient_name_default"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_16sp"/>

    <ImageView
        android:id="@+id/recycler_item_shopping_ingredient_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_16dp"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_8dp"
        android:src="@drawable/ic_category_appetizer_green_32dp"/>

</RelativeLayout>

