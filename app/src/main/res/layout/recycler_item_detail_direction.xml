<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

    <TextView
        android:id="@+id/recycler_item_direction_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="18sp"
        android:text="1."
        android:textColor="@color/colorPrimary"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/recipe_item_remove_direction_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        app:backgroundTint="@android:color/holo_red_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <EditText
        android:id="@+id/recycler_item_direction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/textColorPrimary"
        android:text="Squeeze lemons."
        android:backgroundTint="@color/windowBackground"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignBaseline="@+id/recycler_item_direction_number"
        android:layout_toRightOf="@+id/recycler_item_direction_number"
        android:layout_toEndOf="@+id/recycler_item_direction_number"/>

</RelativeLayout>