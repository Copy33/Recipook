<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

    <TextView
        android:id="@+id/recycler_item_direction_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/recycler_item_direction_delete_button"
        android:layout_toRightOf="@+id/recycler_item_direction_delete_button"
        android:text="@string/detail_edit_recycler_item_direction_number_default"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/recycler_item_direction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/recycler_item_direction_number"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/recycler_item_direction_number"
        android:layout_toRightOf="@id/recycler_item_direction_number"
        android:background="@color/windowBackground"
        android:inputType="textCapSentences|textMultiLine"
        android:text="@string/detail_edit_recycler_item_direction_text_default"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/recycler_item_direction_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/windowBackground"
        android:src="@drawable/ic_delete_red_24dp"
        android:visibility="gone"
        android:layout_alignBottom="@id/recycler_item_direction_number"/>

</RelativeLayout>
