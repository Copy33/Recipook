<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_edit_header_recipe_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/buffalodrumsticks"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_edit_header_recipe_name_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_edit_header_recipe_image_view"
        android:hint="@string/dialog_edit_recipe_header_recipe_name_textinput_hint">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_edit_header_recipe_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_rounded_corners_black_transparent_20">

        <Button
            android:id="@+id/dialog_edit_header_edit_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_rounded_corners_black_transparent_pressed_20"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:drawableLeft="@drawable/ic_camera_white_24dp"
            android:drawableStart="@drawable/ic_camera_white_24dp"
            android:text="@string/dialog_edit_recipe_header_edit_image_button_text"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <ImageButton
            android:id="@+id/dialog_edit_header_remove_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/right_rounded_corners_black_transparent_pressed_20"
            android:src="@drawable/ic_delete_white_24dp"/>

    </LinearLayout>

</RelativeLayout>